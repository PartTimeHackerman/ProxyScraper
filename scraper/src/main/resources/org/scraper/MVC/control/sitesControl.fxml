<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" minWidth="220.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.scraper.MVC.control.SitesController">
   <children>
      <GridPane hgap="5.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="110.0" />
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="90.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Average working ≥" GridPane.rowIndex="1" />
            <Label text="Average sites ≥ " />
            <TextField fx:id="avgProxies" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="50.0" GridPane.columnIndex="1" />
            <TextField fx:id="avgWorkingProxies" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Separator prefWidth="200.0" />
      <VBox spacing="5.0">
         <children>
            <HBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                    <Button fx:id="scrapeButton" mnemonicParsing="false" text="Scrape" />
                    <Button fx:id="checkButton" mnemonicParsing="false" text="Check sites" />
               </children>
            </HBox>
                <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="30.0" prefWidth="83.0" spacing="5.0">
                    <children>
                      <Button fx:id="gatherButton" mnemonicParsing="false" text="Gather" textAlignment="CENTER">
                          <opaqueInsets>
                              <Insets />
                          </opaqueInsets>
                      </Button>
                        <Label text="Depth" />
                        <TextField fx:id="depthField" alignment="CENTER" prefHeight="25.0" prefWidth="43.0" text="2" />
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <TextField fx:id="addField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="170.0" promptText="http://sample.xyz/" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="addSite" mnemonicParsing="false" text="Add" />
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
   </padding>
</VBox>
